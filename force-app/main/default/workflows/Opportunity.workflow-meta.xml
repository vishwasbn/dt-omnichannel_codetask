<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>Calculate_Estimated_Annual_Spend</fullName>
        <field>Estimated_Annual_Spend__c</field>
        <formula>IF( Lead_Annual_Spend__c &gt; 0 , Lead_Annual_Spend__c, Opportunity_Annual_Spend__c )</formula>
        <name>Calculate Estimated Annual Spend</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_Estimated_Annual_Spend_on_Account</fullName>
        <field>Estimated_Annual_Spend__c</field>
        <formula>Estimated_Annual_Spend__c</formula>
        <name>Update Estimated Annual Spend on Account</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
        <targetObject>AccountId</targetObject>
    </fieldUpdates>
    <rules>
        <fullName>Application Follow-up Task</fullName>
        <actions>
            <name>Follow_up_with_customer_regarding_application</name>
            <type>Task</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Opportunity.Fleet_Last_Application_Sent_Date__c</field>
            <operation>equals</operation>
            <value>TODAY</value>
        </criteriaItems>
        <description>Automatically creates task for Fleet Specialist to follow-up up with customer when an application has be sent</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Estimated Annual Spend</fullName>
        <actions>
            <name>Calculate_Estimated_Annual_Spend</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <booleanFilter>(1 OR  2) AND 3</booleanFilter>
        <criteriaItems>
            <field>Opportunity.Lead_Annual_Spend__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Average_Tire_Spend__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Estimated_Annual_Spend__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Estimated Annual Spend on Account</fullName>
        <actions>
            <name>Update_Estimated_Annual_Spend_on_Account</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>ISCHANGED( Estimated_Annual_Spend__c )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <tasks>
        <fullName>Follow_up_with_customer_regarding_application</fullName>
        <assignedToType>owner</assignedToType>
        <dueDateOffset>7</dueDateOffset>
        <notifyAssignee>false</notifyAssignee>
        <priority>Normal</priority>
        <protected>false</protected>
        <status>Open</status>
        <subject>Follow-up with customer regarding application</subject>
    </tasks>
</Workflow>
