    <fieldUpdates>
        <fullName>Calculate_Estimated_Annual_Spend</fullName>
        <field>Estimated_Annual_Spend__c</field>
        <formula>Fleet_Number_of_Vehicles__c  * 12  *  Average_Tire_Spend__c</formula>
        <name>Calculate Estimated Annual Spend</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Estimated Annual Spend</fullName>
        <actions>
            <name>Calculate_Estimated_Annual_Spend</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Lead.Fleet_Number_of_Vehicles__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Lead.Average_Tire_Spend__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Lead.Estimated_Annual_Spend__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
