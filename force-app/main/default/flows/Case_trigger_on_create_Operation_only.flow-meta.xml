    <description>This customer care related flow used to replace the workflow which triggers only in case of case create operation</description>
    <environments>Default</environments>
    <formulas>
        <description>This caluculate if the email case is created during after hours</description>
        <name>after_hours_formula</name>
        <dataType>Boolean</dataType>
        <expression>OR(
  MOD( DATEVALUE({!$Record.CreatedDate}) - DATE(1900, 1, 6), 7) =1, 
  AND(
   MOD( DATEVALUE({!$Record.CreatedDate}) - DATE(1900, 1, 6), 7) =0, 
   VALUE(MID(TEXT({!$Record.CreatedDate}),12,2))&lt; 10, 
   VALUE(MID(TEXT({!$Record.CreatedDate}),12,2))&gt; 1),
  AND(
   MOD( DATEVALUE({!$Record.CreatedDate}) - DATE(1900, 1, 6), 7) &gt;= 2,
   VALUE(MID(TEXT({!$Record.CreatedDate}),12,2))&lt; 13, 
   VALUE(MID(TEXT({!$Record.CreatedDate}),12,2))&gt; 1) )</expression>
    </formulas>
